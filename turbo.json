{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "^lint"],
      "outputs": ["dist/**", ".next/**", "public/dist/**"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build", "ts-check"]
    },
    "ts-check": {
      "dependsOn": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "update-deps": {
      "cache": false
    },
    "check-deps": {
      "cache": false
    }
  }
}
